@model LogiticsManagment.Models.VehicleRoute

@{
    ViewBag.Title = "AssignRoute";
}

<h2>AssignRoute</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>VehicleRoute</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.vehicle_id, "Vehicle", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.vehicle_id, (SelectList)ViewBag.Vehicles, "-- Select Vehicle --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.vehicle_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div> @Html.HiddenFor(model => model.route_id)</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ListRoutes")
</div>
